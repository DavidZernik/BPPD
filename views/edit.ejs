
      <!-- SIGN UP FORM -->
      <div class="row">
        <div class="col-xs-12">
          <div class="row">
            <div class="col-md-10 col-md-offset-2">
              <h1>Edit your account</h1>
            </div>
          </div>
        </div>
        <form id="edit-account-form" data-toggle="validator" role="form" class="form-horizontal" method="post" action="/users/edit">
          <div class="form-group">
            <label for="inputName" class="control-label col-sm-2">Name</label>
            <div class="form-group col-sm-6">
              <input name="name" type="text" class="form-control" id="inputName" value="<%= userName %>" required>
            </div>
          </div>
          <div class="form-group">
            <label for="inputEmail" class="control-label col-sm-2">Email</label>
            <div class="form-group  col-sm-6">
              <input name="email" type="email" class="form-control" id="inputEmail" value="<%= userEmail %>"  data-error="Bruh, that email address is invalid" required>
            <!-- <div class="help-block with-errors"></div> -->
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword" class="control-label col-sm-2">New Password</label>
            <div class="form-group col-sm-6">
              <input name="password" type="password" class="form-control" id="inputPassword" placeholder="New Password" required>
            </div>
          </div>
          <div class="form-group">
            <label for="inputPasswordConfirm" class="control-label col-sm-2">Confirm New Password</label>
            <div class="form-group col-sm-6 col-sm-offset-2">
              <input name="passwordConfirmation" type="password" class="form-control" id="inputPasswordConfirm" data-match="#inputPassword" data-match-error="Whoops, these don't match" placeholder="Confirm New Password">
              <div class="help-block with-errors" required></div>
            </div>
          </div>
            <div class="col-sm-2"></div>
            <div class="form-group col-sm-6">
              <button type="submit" class="btn btn-primary">Submit</button>
              <a href="/users/delete" class="btn btn-danger">Delete Account</a>
            </div>
          </div>
        </form>
        </div>
      </div>

      <script>
      $(function(){
        $('edit-account-form').validator('validate')

      })
      </script>
      <!-- END SIGN UP FORM -->
